{
  "extends": "@scrollz/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "/**/*",
    "**/*",
    "/src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
